<p id="notice"><%= notice %></p>
<center>
<h1>Things we need to remember</h1>

<table>
  <thead>
    <tr>
      <th>Memory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.memory %></td>
        <td><%= link_to 'Show', memory %></td>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Forget', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <%= link_to 'Home', welcome_index_path %> | <%= link_to 'New Memory', new_memory_path %>
</center>